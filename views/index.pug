extends layout
block content
  .container
      h2 
        p
         | Tu Tiempo App
      br
      br
      br
      br
      .row
        .col-md-3
          form(method="post", action="get_weather")
            .form-group
              label.sr-only(for="city") Ciudad
              input.form-control( name="city" type="text" placeholder="Enter City Name (for ex: Rincon de la Victoria)" required='required')
            button.btn.btn-success(type="submit") El Tiempo
      if error
        br
        .alert.alert-danger #{error}
      if weather
        .row
          .col-md-5
            p
            br
            .panel.panel-primary
              .panel-heading El Tiempo: #{weather.name}, #{weather.sys.country}
              .panel-body
               p Current Temperature = #{weather.main.temp} !{units}, #{weather.weather[0].description}
               p Humidity = #{weather.main.humidity} &#37;
               p Min = #{weather.main.temp_min} !{units}
               p Max = #{weather.main.temp_max} !{units}